//
// The alert component
//
// @param  hash  properties for decoration
//
// .c-alert {
//   _alert({
//     background-color: null,
//     border: null,
//   });
// }
//
// <div class="c-alert" role="alert">
//   ...
// </div>
//

_alert(params = {}) {
  params = merge(
    {
      background-color: null,
      border: null,
    },
    params
  );

  background-color = params['background-color'];
  border = params['border'];

  display: block;

  if (! _is-null(border)) {
    border: border;
  }

  if (! _is-null(background-color)) {
    background-color: background-color;
  }
}
