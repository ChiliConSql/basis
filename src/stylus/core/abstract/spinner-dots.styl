//
// The dots spinner component
//
// @param  hash  properties for decoration
//
// .c-spinner-dots {
//   _spinner-dots({
//     size    : 10px,
//     color   : _color-gray,
//     delay   : 0s,
//     duration: 2s,
//     scale   : 1.3,
//   });
// }
//
// <div class="c-spinner-dots">
//   <div class="c-spinner-dots__dot"></div>
//   <div class="c-spinner-dots__dot"></div>
//   <div class="c-spinner-dots__dot"></div>
// </div>
//

_spinner-dots(params = {}) {
  params = merge(
    {
      size    : 10px,
      color   : _color-gray,
      delay   : 0s,
      duration: 2s,
      scale   : 1.3,
    },
    params
  );

  animation-name = _sanitize-animation-name(_spinner-dots- + join('-', values(params)));

  display: inline-block;
  font-size: 0;

  &__dot {
    _circle(params['size']);
    display: inline-block;
    background-color: params['color'];
    animation: animation-name params['duration'] ease-in params['delay'] infinite;

    &:nth-child(2) {
      animation-delay: .1s;
    }

    &:nth-child(3) {
      animation-delay: .2s;
    }

    @keyframes animation-name {
      0% {
        transform: scale(1);
      }
      10% {
        transform: scale(params['scale']);
      }
      20% {
        transform: scale(1);
      }
      100% {
        transform: scale(1);
      }
    }
  }
}
