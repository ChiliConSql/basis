$_drawer {
  item-padding-coefficient = 1;

  _drawer();

  &__menu {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  &__item, &__subitem {
    position: relative;
    color: #fff;

    > a {
      color: #fff;
      text-decoration: none;
      _transition(background-color);

      +_hover() {
        color: #ccc;
      }
    }
  }

  &__item {
    _padding(.5, item-padding-coefficient, 0);
  }

  &__submenu {
    list-style: none;
    _margin(0, (item-padding-coefficient * -1), 0, 0);
    padding-left: 1em;
  }

  &__subitem {
    _padding(.5, item-padding-coefficient, 0, 0);
  }

  &__toggle {
    _position(absolute, _space(.5), 5px, 0);
    _square(_base-line-height)
    display: flex;
    align-items: center;
    justify-content: center;
  }
}
