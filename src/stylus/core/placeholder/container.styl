//
// Fluid container component
//
// .c-container-fluid {
//   @extend $_container-fluid;
// }
//
// <div class="c-container-fluid">
//   ...
// </div>
//

$_container-fluid {
  container-margin = _base-line-height

  _container-fluid();
  padding-right: (container-margin / 2);
  padding-left: (container-margin / 2);

  +_media-min('md') {
    padding-right: container-margin;
    padding-left: container-margin;
  }
}

//
// Container component
//
// .c-container {
//   @extend $_container;
// }
//
// <div class="c-container">
//   ...
// </div>
//

$_container {
  @extend $_container-fluid;
  _container();
}
