$_form-control {
  _form-control({
    background-color         : #fff,
    border-size              : 1px,
    border-color             : _light(_color-gray),
    disabled-background-color: _lighter(_color-gray),
    readonly-background-color: _lighter(_color-gray),
  });

  border-radius: _border-radius;
  padding: (_base-line-height / 4) (_base-line-height / 2);
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, .035);
}
