//
// Heading element font size scale;
// @type  int
//
_h1-font-size-scale ?= bs-h1-font-size-scale ?= 3;
_h2-font-size-scale ?= bs-h2-font-size-scale ?= 2.5;
_h3-font-size-scale ?= bs-h3-font-size-scale ?= 2;
_h4-font-size-scale ?= bs-h4-font-size-scale ?= 1.5;
_h5-font-size-scale ?= bs-h5-font-size-scale ?= 1;
_h6-font-size-scale ?= bs-h6-font-size-scale ?= 1;

//
// Heading element margin coefficient;
// @type  int
//
_h1-margin-top    ?= bs-h1-margin-top    ?= 0;
_h1-margin-bottom ?= bs-h1-margin-bottom ?= 1;
_h2-margin-top    ?= bs-h2-margin-top    ?= 2;
_h2-margin-bottom ?= bs-h2-margin-bottom ?= 1;
_h3-margin-top    ?= bs-h3-margin-top    ?= 2;
_h3-margin-bottom ?= bs-h3-margin-bottom ?= 1;
_h4-margin-top    ?= bs-h4-margin-top    ?= 2;
_h4-margin-bottom ?= bs-h4-margin-bottom ?= 1;
_h5-margin-top    ?= bs-h5-margin-top    ?= 1;
_h5-margin-bottom ?= bs-h5-margin-bottom ?= .5;
_h6-margin-top    ?= bs-h6-margin-top    ?= 1;
_h6-margin-bottom ?= bs-h6-margin-bottom ?= .5;

//
// Default font family
// @type  string
//
bs-font-family ?= "Helvetica Neue", Helvetica, Arial, sans-serif;
