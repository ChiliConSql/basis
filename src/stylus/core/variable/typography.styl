//
// Default font size
// If html { font-size: 62.5% }, set 10px
// @type  px
//
$bs-base-font-size-px ?= 16px;

//
// Default font size
// @type  rem
//
$bs-base-font-size = 1rem;

//
// Heading element font size scale;
// @type  int
//
$bs-h1-font-size-scale ?= 3;
$bs-h2-font-size-scale ?= 2.5;
$bs-h3-font-size-scale ?= 2;
$bs-h4-font-size-scale ?= 1.5;
$bs-h5-font-size-scale ?= 1;
$bs-h6-font-size-scale ?= 1;

//
// Heading element margin coefficient;
// @type  int
//
$bs-h1-margin-top    ?= 0;
$bs-h1-margin-bottom ?= 1;
$bs-h2-margin-top    ?= 2;
$bs-h2-margin-bottom ?= 1;
$bs-h3-margin-top    ?= 2;
$bs-h3-margin-bottom ?= 1;
$bs-h4-margin-top    ?= 2;
$bs-h4-margin-bottom ?= 1;
$bs-h5-margin-top    ?= 1;
$bs-h5-margin-bottom ?= .5;
$bs-h6-margin-top    ?= 1;
$bs-h6-margin-bottom ?= .5;

//
// Between the character and line of line-height
// @type  rem
//
$bs-between-lines ?= ($bs-base-font-size / 4);

//
// Default line height
// @type  rem
//
$bs-base-line-height ?= ($bs-base-font-size + $bs-between-lines * 2);

//
// Margin coefficient
// @type  int
//
$bs-margin-coefficient ?= 1;

//
// Default font family
// @type  string
//
$bs-font-family ?= "Helvetica Neue", Helvetica, Arial, sans-serif;
