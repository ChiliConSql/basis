//
// Default font size
// If html { font-size: 62.5% }, set 10px
// @type  px
//
bs-base-font-size-px ?= 16px;

//
// Default font size
// @type  rem
//
bs-base-font-size = 1rem;

//
// Between the character and line of line-height
// @type  rem
//
bs-between-lines ?= (bs-base-font-size / 4);

//
// Default line height
// @type  rem
//
bs-base-line-height ?= (bs-base-font-size + bs-between-lines * 2);

//
// Margin coefficient
// @type  int
//
bs-margin-coefficient ?= 1;

//
// The minimum number of columns
// @type  int
//
bs-min-columns ?= 1;

//
// The maximum number of columns
// @type  int
//
bs-max-columns ?= 12;

//
// Break point for smartphone
// @type  length
//
bs-screen-sm-min = 0;

//
// Break point for smartphone and tablet
// 640px / 16px
// @type  length
//
bs-screen-md-min ?= (bs-px2rem(640px) / bs-px2rem(bs-base-font-size-px));
bs-screen-sm-max = (bs-screen-md-min - (1em / bs-strip-unit(bs-base-font-size-px)));

//
// Break point for tablet and pc
// 1024px / 16px
// @type  length
//
bs-screen-lg-min ?= (bs-px2rem(1024px) / bs-px2rem(bs-base-font-size-px));
bs-screen-md-max = (bs-screen-lg-min - (1em / bs-strip-unit(bs-base-font-size-px)));

//
// Array of breakpoints
// @type  array
//
bs-sizes ?= {
  sm: bs-screen-sm-min,
  md: bs-screen-md-min,
  lg: bs-screen-lg-min
};

//
// Array of breakpoints
// @type  array
//
bs-sizes-max ?= {
  sm: bs-screen-sm-max,
  md: bs-screen-md-max
};
