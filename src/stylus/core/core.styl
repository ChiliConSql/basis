//
// Prefix of basis classes
// @type  string
//
bs-prefix ?= '_';

//
// If you don't need classes of the Basis, set to true.
//
bs-use-mixin-only ?= false;

@import 'function/*';
@import 'variable/*';
@import 'mixin/*';
@import '_deprecated/mixin';

if (bs-is-use-mixin-only()) {
  @import 'placeholder/*';
  @import '_deprecated/placeholder';
}
