//
// Return prefix for the device size
//
// @param   string  size  sm|md|lg
// @return  string
//
bs-bp-prefix(size) {
  return _size-prefix(size);
}

//
// A little brighten
//
// @param   hex  hex
// @return  hex
//
bs-light(hex) {
  return _light(hex);
}

//
// Brighten
//
// @param   hex  hex
// @return  hex
//
bs-lighter(hex) {
  return _lighter(hex);
}

//
// To very brighten
//
// @param   hex  hex
// @return  hex
//
bs-lightest(hex) {
  return _lightest(hex);
}

//
// A little darken
//
// @param   hex  hex
// @return  hex
//
bs-dark(hex) {
  return _dark(hex);
}

//
// Darken
//
// @param   hex  hex
// @return  hex
//
bs-darker(hex) {
  return _darker(hex);
}
