_form-control() {
  background-color: #fff;
  border: 1px solid _light(_color-gray);

  &[disabled] {
    background-color: _lighter(_color-gray);
    cursor: not-allowed;
  }

  &[readonly] {
    background-color: _lighter(_color-gray);
  }

  textarea& {
    height: auto;
    width: 100%;
  }
}
