bs-form-control-border        ?= 1px solid _light(_color-gray);
bs-form-control-border-radius ?= _border-radius;
bs-form-control-padding       ?= (bs-base-line-height / 4) (bs-base-line-height / 2);
bs-form-control-disabled-background-color ?= _lighter(_color-gray);

_form-control() {
  background-color: #fff;
  border: bs-form-control-border;
  border-radius: bs-form-control-border-radius;
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, .035);
  padding: bs-form-control-padding;

  &[disabled] {
    background-color: bs-form-control-disabled-background-color;
    cursor: not-allowed;
  }

  &[readonly] {
    background-color: bs-form-control-disabled-background-color;
  }

  textarea& {
    height: auto;
    width: 100%;
  }
}
