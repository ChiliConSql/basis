_input-group-border ?= 1px solid _light(_color-gray);

_input-group() {
  display: flex;
  flex-wrap: nowrap;

  > :nth-child(n + 2) {
    border-left: none;
  }
}

_input-group__addon() {
  flex: 0 1 0;
  border: _input-group-border;
}

_input-group__field() {
  display: flex;
  flex: 1;
  border: _input-group-border;

  > input[type='email'],
  > input[type='number'],
  > input[type='password'],
  > input[type='search'],
  > input[type='tel'],
  > input[type='text'],
  > input[type='url'] {
    _form-control();
    flex: 1;
    width: 100%;
    border: none;
  }
}

_input-group__btn() {
  _btn();
  flex: 0 1 0;
  overflow: visible;
  border: _input-group-border;
}
