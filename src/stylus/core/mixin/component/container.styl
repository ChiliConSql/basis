//
// Fluid container component
//
// .c-container-fluid {
//     bs-c-container-fluid();
// }
//
// <div class="c-container-fluid">
//    ...
// </div>
//

$bs-c-container-margin ?= $bs-base-line-height;

bs-c-container-fluid() {
  margin-right: auto;
  margin-left: auto;
  padding-right: ($bs-c-container-margin / 2);
  padding-left: ($bs-c-container-margin / 2);

  +bs-bp-md-min() {
    padding-right: $bs-c-container-margin;
    padding-left: $bs-c-container-margin;
  }
}

//
// Container component
//
// .c-container {
//     bs-c-container();
// }
//
// <div class="c-container">
//    ...
// </div>
//

$bs-c-container-max-width ?= 75rem;

bs-c-container() {
  bs-c-container-fluid();

  +bs-bp-lg-only() {
    max-width: $bs-c-container-max-width;
  }
}
