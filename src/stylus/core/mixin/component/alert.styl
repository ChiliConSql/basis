$bs-c-alert-border-radius ?= $bs-border-radius;
$bs-c-alert-border        ?= 1px solid bs-light($bs-color-gray);
$bs-c-alert-padding       ?= $bs-base-font-size;

bs-c-alert() {
  background-color: #fff;
  border-radius: $bs-c-alert-border-radius;
  border: $bs-c-alert-border;
  display: block;
  padding: $bs-c-alert-padding;
}
