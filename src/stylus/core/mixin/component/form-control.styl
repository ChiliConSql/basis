$bs-c-form-control-border        ?= 1px solid bs-light($bs-color-gray);
$bs-c-form-control-border-radius ?= $bs-border-radius;
$bs-c-form-control-padding       ?= ($bs-base-line-height / 4) ($bs-base-line-height / 2);
$bs-c-form-control-disabled-background-color ?= bs-lighter($bs-color-gray);

bs-c-form-control() {
  background-color: #fff;
  border: $bs-c-form-control-border;
  border-radius: $bs-c-form-control-border-radius;
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, .035);
  padding: $bs-c-form-control-padding;

  &[disabled] {
    background-color: $bs-c-form-control-disabled-background-color;
    cursor: not-allowed;
  }

  &[readonly] {
    background-color: $bs-c-form-control-disabled-background-color;
  }

  textarea& {
    height: auto;
    width: 100%;
  }
}
