//
// <a class="c-btn-ghost" role="button">btn</a>
//

_ghost(params = {}) {
  params = merge(
    {
      border-size : 1px,
      border-color: #fff,
      color       : #fff,
    },
    params
  );

  background-color: transparent !important;
  border: params['border-size'] solid params['border-color'];
  color: params['color'];
}
