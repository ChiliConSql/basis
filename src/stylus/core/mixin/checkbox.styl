// Checkbox component
//
// .c-checkbox {
//   _checkbox();
// }
//
// <span class="c-checkbox" data-c="checkbox">
//   <input type="checkbox">
//   <label data-c="checkbox__label">Label</label>
// </span>
//

_checkbox() {
  checkbox-margin  = (_base-font-size / 2);
  checkbox-z-index = 1;
  checkbox-border-radius = 3px;

  position: relative;
  display: inline-block;
  margin-right: checkbox-margin;
  padding-left: (_base-font-size + checkbox-margin);

  > [type="checkbox"] {
    _position(absolute, _between-lines, null, null, 0);
    _square(_base-font-size);
    z-index: checkbox-z-index;
    cursor: pointer;
    opacity: 0 !important;
    outline: 0;

    &:checked ~ [data-c="checkbox__label"]::after {
      opacity: 1;
    }
  }

  > [data-c="checkbox__label"] {
    &::before {
      _position(absolute, _between-lines, null, null, 0);
      _square(_base-font-size, checkbox-border-radius);
      z-index: (checkbox-z-index - 1);
      content: '';
      display: inline-block;
      background-color: #fff;
      border: 1px solid _light(_color-gray);
    }

    &::after {
      size = (_base-font-size / 2);
      left = ((_base-font-size - size) / 2);
      top  = (_between-lines + left);

      _position(absolute, top, null, null, left);
      _square(size, (checkbox-border-radius - 1));
      z-index: (checkbox-z-index - 1);
      content: '';
      display: inline-block;
      background-color: _dark(_color-gray);
      opacity: 0;
    }
  }
}
