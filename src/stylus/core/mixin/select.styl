_select() {
  position: relative;
  display: inline-block;
  overflow: hidden;

  &::before {
    _position(absolute, 50%, 6px, null, null);
    transform: translateY(-50%);
    content: '';
    display: block;
  }

  > select {
    position: relative;
    margin: 0;
    appearance: none;
    background-color: transparent !important;
    border: none;
    line-height: 1;
    outline: 0;
    width: 100%;
  }
}
