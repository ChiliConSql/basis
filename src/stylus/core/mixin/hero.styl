_hero() {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  position: relative;
}

_hero__header() {
  _hero__col();
  align-self: flex-start;
}

_hero__content() {
  _hero__col();
  align-self: center;
}

_hero__footer() {
  _hero__col();
  align-self: flex-end;
}

_hero__col() {
  flex: 0 1 100%;
  max-width: 100%;
  position: relative;
}
