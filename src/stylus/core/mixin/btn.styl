bs-btn-border     ?= 1px solid _light(_color-gray);
bs-btn-text-color ?= _color-text;
bs-btn-padding    ?= (_base-font-size / 2) (_base-font-size * 2);

_btn() {
  background-color: #fff;
  border: bs-btn-border;
  color: bs-btn-text-color;
  cursor: pointer;
  display: inline-block;
  padding: bs-btn-padding;
  text-align: center;
  text-decoration: none;
  vertical-align: middle;
  white-space: nowrap;
  overflow: hidden;
}
